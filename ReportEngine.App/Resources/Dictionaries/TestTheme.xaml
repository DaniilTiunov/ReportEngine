<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Основные фоны -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#0F0F1A"/>   <!-- глубокий почти чёрный -->
    <SolidColorBrush x:Key="SecondaryColor" Color="#1C1C2B"/> <!-- фон панелей -->
    <SolidColorBrush x:Key="BorderColor" Color="#3A3A3A"/>    <!-- мягкие границы -->
    <!-- Hover/Selection -->
    <SolidColorBrush x:Key="RowHoverColor" Color="#2A2A40"/>
    <SolidColorBrush x:Key="SelectedRowBackground" Color="#FF00FFC6"/> <!-- неоновая бирюза -->
    <SolidColorBrush x:Key="SelectedRowForeground" Color="#FFFFFF"/>
    <!-- Текст -->
    <SolidColorBrush x:Key="TextPrimary" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#A8A8C2"/>
    <SolidColorBrush x:Key="TextMuted" Color="#777799"/>
    <!-- Акценты -->
    <SolidColorBrush x:Key="AccentColor" Color="#BB86FC"/>    <!-- сиреневый -->
    <SolidColorBrush x:Key="AccentNeonPink" Color="#FF2EFF"/> <!-- яркий маджента -->
    <SolidColorBrush x:Key="AccentNeonBlue" Color="#00BFFF"/> <!-- электрический синий -->
    <SolidColorBrush x:Key="AccentNeonGreen" Color="#39FF14"/> <!-- кислотный зелёный -->
    <!-- Состояния -->
    <SolidColorBrush x:Key="SuccessColor" Color="#00E676"/>   <!-- неоново-зелёный -->
    <SolidColorBrush x:Key="WarningColor" Color="#FFD600"/>   <!-- кислотно-жёлтый -->
    <SolidColorBrush x:Key="ErrorColor" Color="#FF1744"/>     <!-- неоново-красный -->
    <!-- Спецэффекты -->
    <SolidColorBrush x:Key="GlowEffectColor" Color="#FF00FFC6"/> <!-- для теней/свечения -->
    
    <Style TargetType="DockPanel">
        <Setter Property="Background" Value="Black"/>
    </Style>
    
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource PrimaryColor}"></Setter>
    </Style>
    
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SecondaryColor}"/>
        <Setter Property="BorderThickness" Value="{StaticResource SelectedRowBackground}"/>
        <Setter Property="FontFamily" Value="Courier New"/>
    </Style>
    
    <Style TargetType="ContentControl">
        <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
    </Style>
</ResourceDictionary>