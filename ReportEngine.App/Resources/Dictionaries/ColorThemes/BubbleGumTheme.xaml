<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/ReportEngine.App;component/Resources/Dictionaries/Styles/GigaChadUI.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  Бабл Гам  -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#2A2236" />
    <!--  тёмно-фиолетовый фон  -->
    <SolidColorBrush x:Key="SecondaryColor" Color="#3B2E4A" />
    <!--  чуть светлее  -->
    <SolidColorBrush x:Key="AccentColor" Color="#FF66B3" />
    <!--  розовый акцент  -->
    <SolidColorBrush x:Key="BorderColor" Color="#4E3A5E" />
    <SolidColorBrush x:Key="RowHoverColor" Color="#4A3D55" />
    <SolidColorBrush x:Key="SelectedRowBackground" Color="#FF80C0" />
    <SolidColorBrush x:Key="SelectedRowForeground" Color="#2A2236" />
    <SolidColorBrush x:Key="PrimaryForeground" Color="#E8DFF5" />
    <!--  мягкий бело-лиловый  -->
    <SolidColorBrush x:Key="SecondaryForeground" Color="#C9B6E4" />
    <SolidColorBrush x:Key="WindowBorderColor" Color="#5A4570" />
    <SolidColorBrush x:Key="ButtonBackground" Color="#A258A7" />
    <SolidColorBrush x:Key="ButtonForeground" Color="#E8DFF5" />
    <SolidColorBrush x:Key="ButtonHoverBackground" Color="#B66BBC" />
    <SolidColorBrush x:Key="ButtonPressedBackground" Color="#C67DC8" />
    <SolidColorBrush x:Key="ButtonDisabledBackground" Color="#3B2E4A" />
    <SolidColorBrush x:Key="ButtonDisabledForeground" Color="#8E7CA4" />
    <SolidColorBrush x:Key="DisabledForeground" Color="#A893B8" />
</ResourceDictionary>