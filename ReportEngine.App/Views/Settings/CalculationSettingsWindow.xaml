                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="-1,15,6,10"
                                Text="Пескоструйные&#x0a;работы: " />
                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="0,20,0,20"
                                Text="{Binding SandBlaste.SandBlastWork, Mode=TwoWay}" />

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="-2,15,4,10"
                                Text="Время пескоструйных&#x0a;работ: " />
                            <TextBox
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,20,0,20"
                                Text="{Binding SandBlaste.TimeSandBlastWork, Mode=TwoWay}" />
                        </Grid>
                    </TabItem>

                    <TabItem Header="Электро">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="-1,15,6,10"
                                Text="Электромонтаж: " />
                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="0,20,0,20"
                                Text="{Binding ElectricalSettings.ElectricalMontage, Mode=TwoWay}" />

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="-2,15,4,10"
                                Text="Время из-ния&#x0a;и монтажа 1 провода: " />
                            <TextBox
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,20,0,20"
                                Text="{Binding ElectricalSettings.TimeMontageWire, Mode=TwoWay}" />

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="-2,15,4,10"
                                Text="Время из-ния&#x0a;и монтажа 1 кабеля: " />
                            <TextBox
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="0,20,0,20"
                                Text="{Binding ElectricalSettings.TimeMontageCable, Mode=TwoWay}" />
                        </Grid>
                    </TabItem>
                </TabControl>
                <StackPanel Grid.Row="1" HorizontalAlignment="Right">
                    <Button
                        Width="100"
                        Height="30"
                        Margin="5,5,5,0"
                        Command="{Binding SaveSettingsCommand}"
                        Content="Применить" />
                </StackPanel>
            </Grid>
        </DockPanel>
    </Border>
</Window>