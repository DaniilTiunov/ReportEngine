                                Grid.Row="5"
                                Grid.Column="1"
                                Margin="425,5,5,5"
                                Text="{Binding StandSettings.SensorCountOnFrame, Mode=TwoWay}" />

                            <TextBlock
                                Grid.Row="6"
                                Grid.Column="0"
                                Margin="15,5,5,5"
                                Text="Кабель 4мм: " />
                            <TextBox
                                Grid.Row="6"
                                Grid.Column="1"
                                Margin="15,5,397,5"
                                Text="{Binding StandSettings.CabelFourMM, Mode=TwoWay}" />
                            <Button
