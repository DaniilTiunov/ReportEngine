                                Grid.Column="0"
                                Margin="15,5,5,5"
                                Text="Кабель 6мм: " />
                            <TextBox
                                Grid.Row="5"
                                Grid.Column="1"
                                Margin="15,5,397,5"
                                Text="{Binding StandSettings.CabelSixMM, Mode=TwoWay}" />
                            <Button
