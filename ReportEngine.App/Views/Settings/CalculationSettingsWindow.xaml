                                Grid.Column="1"
                                Margin="250,5,360,5"
                                Content="..." />

                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="1"
                                Margin="310,5,230,5"
                                Text="кол-во кабеля: " />
