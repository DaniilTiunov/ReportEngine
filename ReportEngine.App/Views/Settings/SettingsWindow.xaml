<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReportEngine.App.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="ReportEngine.App.Views.SettingsWindow"
        mc:Ignorable="d"
        Title="Настройки приложения" Height="500" Width="546">
    <Grid Margin="0,0,0,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="297*"/>
        </Grid.ColumnDefinitions>
        <ListBox Name="SettingsCategories"  Grid.Column="1" Margin="1,21,25,174" SelectionChanged="SettingsCategories_SelectionChanged" >


            <materialDesign:TreeListViewItem  Content="Основные" IsSelected="True" Tag="GeneralSettings" />
            <materialDesign:TreeListViewItem Content="Подключение" Tag="ConnectionSettings"/>
            <materialDesign:TreeListViewItem  Content="Оформление" Tag="DesignSettings"/>
            <materialDesign:TreeListViewItem  Tag="OtherSettings" Content="Другое"/>

        </ListBox>


        <Button Grid.Column="2" Content="Ок" Margin="165,450,0,0" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="52"/>
        <Button Grid.Column="2" Content="Применить" Margin="234,450,0,0" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="72" />
        <Button Grid.Column="2" Content="Отмена" Margin="328,450,0,0" HorizontalAlignment="Left" Width="52" Height="20" VerticalAlignment="Top"/>


        <ContentControl x:Name="currentSubwindow" Grid.Column="2" Content="Тут конкретное окно" HorizontalAlignment="Left" Margin="0,25,0,0" VerticalAlignment="Top" Height="381" Width="380" />
        <!-- в свойство Content пихаем подокно по смене выбранного элемента в ListBox-->



    </Grid>
</Window>
