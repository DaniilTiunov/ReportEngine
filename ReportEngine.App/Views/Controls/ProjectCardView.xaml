<UserControl
    x:Class="ReportEngine.App.Views.Controls.ProjectCardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReportEngine.App.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    d:DesignHeight="1000"
    d:DesignWidth="1400"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Margin" Value="0,0,0,15" />
            </Style>
            <Style TargetType="DatePicker">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Margin" Value="0,0,0,15" />
            </Style>
            <Style TargetType="ComboBox">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Margin" Value="0,0,0,15" />
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Номер п/п  -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,10,0"
            Text="№ п/п:" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Text="{Binding CurrentProject.Number, Mode=TwoWay}" />

        <!--  Обозначение КД  -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="2"
            Margin="10,0,10,0"
            Text="Обозначение КД:" />
        <TextBox
            Grid.Row="0"
            Grid.Column="3"
            Text="{Binding CurrentProject.Description}" />

        <!--  Дата запроса  -->
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,0,10,0"
            Text="Дата запроса:" />
        <DatePicker
            Grid.Row="1"
            Grid.Column="1"
            SelectedDate="{Binding CurrentProject.CreationDate, Mode=TwoWay}" />

        <!--  Заказчик  -->
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,0,10,0"
            Text="Заказчик:" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Text="{Binding CurrentProject.Company}" />

        <!--  Объект  -->
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,0,10,0"
            Text="Объект:" />
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Text="{Binding CurrentProject.Object}" />

        <!--  Количество стендов  -->
        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Margin="0,0,10,0"
            Text="Кол-во стендов:" />
        <TextBox
            Grid.Row="4"
            Grid.Column="1"
            Text="{Binding CurrentProject.StandCount}" />

        <!--  Стоимость  -->
        <TextBlock
            Grid.Row="4"
            Grid.Column="2"
            Margin="10,0,10,0"
            Text="Стоимость:" />
        <TextBox
            Grid.Row="4"
            Grid.Column="3"
            Text="{Binding CurrentProject.Cost}" />

        <!--  Статус  -->
        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Margin="0,0,10,0"
            Text="Статус:" />
        <ComboBox
            x:Name="StatusComboBox"
            Grid.Row="5"
            Grid.Column="1"
            ItemsSource="{Binding CurrentProject.Statuses}"
            SelectedItem="{Binding CurrentProject.Status, Mode=TwoWay}" />

        <!--  Старт проекта  -->
        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Margin="0,0,10,0"
            Text="Старт проекта:" />
        <DatePicker
            Grid.Row="6"
            Grid.Column="1"
            SelectedDate="{Binding CurrentProject.StartDate, Mode=TwoWay}" />

        <!--  Выход из производства  -->
        <TextBlock
            Grid.Row="6"
            Grid.Column="2"
            Margin="10,0,10,0"
            Text="Выход из производства:" />
        <DatePicker
            Grid.Row="6"
            Grid.Column="3"
            SelectedDate="{Binding CurrentProject.OutOfProduction, Mode=TwoWay}" />

        <!--  Дата окончания договора  -->
        <TextBlock
            Grid.Row="7"
            Grid.Column="2"
            Margin="10,0,10,0"
            Text="Дата окончания договора:" />
        <DatePicker
            Grid.Row="7"
            Grid.Column="3"
            SelectedDate="{Binding CurrentProject.EndDate, Mode=TwoWay}" />

        <!--  Заказ покупателя  -->
        <TextBlock
            Grid.Row="8"
            Grid.Column="0"
            Margin="0,0,10,0"
            Text="Заказ покупателя:" />
        <TextBox
            Grid.Row="7"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="0,44,4,10"
            Text="{Binding CurrentProject.OrderCustomer}" />

        <!--  Заявка на производство  -->
        <TextBlock
            Grid.Row="9"
            Grid.Column="2"
            Margin="10,0,10,0"
            Text="Заявка на производство:" />
        <TextBox
            Grid.Row="9"
            Grid.Column="3"
            Text="{Binding CurrentProject.RequestProduction}" />

        <!--  Трудозатраты  -->
        <TextBlock
            Grid.Row="10"
            Grid.Column="2"
            Margin="10,0,10,0"
            Text="Трудозатраты:" />
        <TextBox
            Grid.Row="10"
            Grid.Column="3"
            Text="" />

        <!--  Руководитель  -->
        <TextBlock
            Grid.Row="11"
            Grid.Column="0"
            Margin="0,0,10,0"
            Text="Руководитель:" />
        <TextBox
            Grid.Row="11"
            Grid.Column="1"
            Text="{Binding CurrentProject.Manager, Mode=TwoWay}" />

        <!--  Маркировка+  -->
        <TextBlock
            Grid.Row="12"
            Grid.Column="0"
            Margin="0,0,10,0"
            Text="Маркировка+:" />
        <TextBox
            Grid.Row="12"
            Grid.Column="1"
            Margin="0,0,0,10"
            Text="{Binding CurrentProject.MarkPlus}" />

        <!--  Маркировка-  -->
        <TextBlock
            Grid.Row="12"
            Grid.Column="2"
            Margin="10,0,10,0"
            Text="Маркировка-:" />
        <TextBox
            Grid.Row="12"
            Grid.Column="3"
            Margin="0,0,0,10"
            Text="{Binding CurrentProject.MarkMinus}" />

        <!--  Оцинкование стендов  -->
        <CheckBox
            Grid.Row="13"
            Grid.Column="0"
            Margin="2,13,8,0"
            VerticalAlignment="Top"
            Content="Оцинкование стендов"
            IsChecked="{Binding CurrentProject.IsGalvanized}" />

        <!--  Кнопка Добавить  -->
        <Button
            Grid.Row="13"
            Grid.Column="3"
            Margin="0,10,0,0"
            Padding="10,5"
            HorizontalAlignment="Right"
            Command="{Binding CreateNewCardCommand}"
            Content="Добавить новый" />
        <Button
            Grid.Row="13"
            Grid.Column="3"
            Margin="0,8,166,2"
            Padding="10,5"
            HorizontalAlignment="Right"
            Command="{Binding SaveChangesCommand}"
            Content="Сохранить изменения" />
    </Grid>
</UserControl>
