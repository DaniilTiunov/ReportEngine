<UserControl
    x:Class="ReportEngine.App.Views.Controls.ProjectCardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{DynamicResource PrimaryColor}"
    FontSize="16"
    Foreground="{DynamicResource PrimaryForeground}"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.35*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.35*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Номер п/п  -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="4"
            VerticalAlignment="Center"
            Text="№ п/п:" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="4"
            Text="{Binding CurrentProjectModel.Number, Mode=TwoWay}" />

        <!--  Обозначение КД  -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="2"
            Margin="4"
            VerticalAlignment="Center"
            Text="Обозначение КД:" />
        <TextBox
            Grid.Row="0"
            Grid.Column="3"
            Margin="4"
            Text="{Binding CurrentProjectModel.Description}" />

        <!--  Дата запроса  -->
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="4"
            VerticalAlignment="Center"
            Text="Дата запроса:" />
        <DatePicker
            Grid.Row="1"
            Grid.Column="1"
            Margin="4"
            SelectedDate="{Binding CurrentProjectModel.CreationDate, Mode=TwoWay}" />

        <!--  Заказчик  -->
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="4"
            VerticalAlignment="Center"
            Text="Заказчик:" />
        <Grid
            Grid.Row="2"
            Grid.Column="1"
            Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox
                Grid.Column="0"
                Margin="4,0,0,0"
                VerticalAlignment="Center"
                Text="{Binding CurrentProjectModel.Company}" />
            <Button
                Grid.Column="1"
                Width="28"
                Height="28"
                Margin="4,0,0,0"
                VerticalAlignment="Center"
                Command="{Binding ProjectCommandProvider.ShowCompanyDialogCommand}"
                Content="..." />
        </Grid>

        <!--  Объект  -->
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="4"
            VerticalAlignment="Center"
            Text="Объект:" />
        <Grid
            Grid.Row="3"
            Grid.Column="1"
            Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox
                Grid.Column="0"
                Margin="4,0,0,0"
                VerticalAlignment="Center"
                Text="{Binding CurrentProjectModel.Object}" />
            <Button
                Grid.Column="1"
                Width="28"
                Height="28"
                Margin="4,0,0,0"
                VerticalAlignment="Center"
                Command="{Binding ProjectCommandProvider.ShowSubjectDialogCommand}"
                Content="..." />
        </Grid>

        <!--  Количество стендов  -->
        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Margin="4"
            VerticalAlignment="Center"
            Text="Кол-во стендов:" />
        <TextBox
            Grid.Row="4"
            Grid.Column="1"
            Margin="4"
            Text="{Binding CurrentProjectModel.StandCount}" />

        <!--  Стоимость  -->
        <TextBlock
            Grid.Row="4"
            Grid.Column="2"
            Margin="4"
            VerticalAlignment="Center"
            Text="Стоимость:" />
        <TextBox
            Grid.Row="4"
            Grid.Column="3"
            Margin="4"
            Text="{Binding CurrentProjectModel.Cost}" />

        <!--  Статус  -->
        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Margin="4"
            VerticalAlignment="Center"
            Text="Статус:" />
        <ComboBox
            Grid.Row="5"
            Grid.Column="1"
            Margin="4"
            ItemsSource="{Binding CurrentProjectModel.Statuses}"
            SelectedItem="{Binding CurrentProjectModel.Status, Mode=TwoWay}" />

        <!--  Старт проекта  -->
        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Margin="4"
            VerticalAlignment="Center"
            Text="Старт проекта:" />
        <DatePicker
            Grid.Row="6"
            Grid.Column="1"
            Margin="4"
            SelectedDate="{Binding CurrentProjectModel.StartDate, Mode=TwoWay}" />

        <!--  Выход из производства  -->
        <TextBlock
            Grid.Row="6"
            Grid.Column="2"
            Margin="4"
            VerticalAlignment="Center"
            Text="Выход из производства:" />
        <DatePicker
            Grid.Row="6"
            Grid.Column="3"
            Margin="4"
            SelectedDate="{Binding CurrentProjectModel.OutOfProduction, Mode=TwoWay}" />

        <!--  Дата окончания договора  -->
        <TextBlock
            Grid.Row="7"
            Grid.Column="2"
            Margin="4"
            VerticalAlignment="Center"
            Text="Дата окончания договора:" />
        <DatePicker
            Grid.Row="7"
            Grid.Column="3"
            Margin="4"
            SelectedDate="{Binding CurrentProjectModel.EndDate, Mode=TwoWay}" />

        <!--  Заказ покупателя  -->
        <TextBlock
            Grid.Row="8"
            Grid.Column="0"
            Margin="4"
            VerticalAlignment="Center"
            Text="Заказ покупателя:" />
        <TextBox
            Grid.Row="8"
            Grid.Column="1"
            Margin="4"
            Text="{Binding CurrentProjectModel.OrderCustomer}" />

        <!--  Заявка на производство  -->
        <TextBlock
            Grid.Row="9"
            Grid.Column="0"
            Margin="4"
            VerticalAlignment="Center"
            Text="Заявка на производство:" />
        <TextBox
            Grid.Row="9"
            Grid.Column="1"
            Margin="4"
            Text="{Binding CurrentProjectModel.RequestProduction}" />

        <!--  Трудозатраты  -->
        <TextBlock
            Grid.Row="10"
            Grid.Column="0"
            Margin="4"
            VerticalAlignment="Center"
            Text="Трудозатраты:" />
        <TextBox
            Grid.Row="10"
            Grid.Column="1"
            Margin="4"
            Text="{Binding CurrentProjectModel.HumanCost}" />

        <!--  Руководитель  -->
        <TextBlock
            Grid.Row="11"
            Grid.Column="0"
            Margin="4"
            VerticalAlignment="Center"
            Text="Руководитель:" />
        <TextBox
            Grid.Row="11"
            Grid.Column="1"
            Margin="4"
            Text="{Binding CurrentProjectModel.Manager}" />

        <!--  Маркировка+  -->
        <TextBlock
            Grid.Row="12"
            Grid.Column="0"
            Margin="4"
            VerticalAlignment="Center"
            Text="Маркировка+:" />
        <TextBox
            Grid.Row="12"
            Grid.Column="1"
            Margin="4"
            Text="{Binding CurrentProjectModel.MarkPlus}" />

        <!--  Маркировка-  -->
        <TextBlock
            Grid.Row="12"
            Grid.Column="2"
            Margin="4"
            VerticalAlignment="Center"
            Text="Маркировка-:" />
        <TextBox
            Grid.Row="12"
            Grid.Column="3"
            Margin="4"
            Text="{Binding CurrentProjectModel.MarkMinus}" />

        <!--  Оцинкование стендов  -->
        <CheckBox
            Grid.Row="13"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="4"
            Content="Оцинкование стендов"
            FontSize="16"
            IsChecked="{Binding CurrentProjectModel.IsGalvanized}" />

        <!--  Кнопки  -->
        <StackPanel
            Grid.Row="13"
            Grid.ColumnSpan="4"
            Margin="4"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="140"
                Height="32"
                Margin="0,0,10,0"
                Command="{Binding ProjectCommandProvider.CreateNewCardCommand}"
                Content="Добавить новый" />
            <Button
                Width="190"
                Height="32"
                Command="{Binding ProjectCommandProvider.SaveChangesCommand}"
                Content="Сохранить изменения" />
        </StackPanel>
    </Grid>
</UserControl>