<UserControl
    x:Class="ReportEngine.App.Views.Controls.ProjectCardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{DynamicResource PrimaryColor}"
    FontSize="14"
    Foreground="{DynamicResource PrimaryForeground}"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Номер п/п  -->
        <TextBlock
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,0,122,0"
            Text="№ п/п:" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0,8,194,7"
            Text="{Binding CurrentProjectModel.Number, Mode=TwoWay}" />

        <!--  Обозначение КД  -->
        <TextBlock
            Grid.Column="2"
            Margin="56,11,4,0"
            VerticalAlignment="Top"
            Text="Обозначение КД:" />
        <TextBox
            Grid.Row="0"
            Grid.Column="3"
            Margin="0,10,0,5"
            Text="{Binding CurrentProjectModel.Description}" />

        <!--  Дата запроса  -->
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Text="Дата запроса:" />
        <DatePicker
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0,8,194,7"
            SelectedDate="{Binding CurrentProjectModel.CreationDate, Mode=TwoWay}" />

        <!--  Заказчик  -->
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Text="Заказчик:" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0,9,194,6"
            Text="{Binding CurrentProjectModel.Company}" />

        <!--  Объект  -->
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Text="Объект:" />
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0,7,194,8"
            Text="{Binding CurrentProjectModel.Object}" />

        <!--  Количество стендов  -->
        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Text="Кол-во стендов:" />
        <TextBox
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0,7,194,8"
            Text="{Binding CurrentProjectModel.StandCount}" />

        <!--  Стоимость  -->
        <TextBlock
            Grid.Row="4"
            Grid.Column="2"
            Margin="104,0,4,0"
            Text="Стоимость:" />
        <TextBox
            Grid.Row="4"
            Grid.Column="3"
            Margin="0,9,0,6"
            Text="{Binding CurrentProjectModel.Cost}" />

        <!--  Статус  -->
        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Text="Статус:" />
        <ComboBox
            x:Name="StatusComboBox"
            Grid.Row="5"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0,8,194,7"
            ItemsSource="{Binding CurrentProjectModel.Statuses}"
            SelectedItem="{Binding CurrentProjectModel.Status, Mode=TwoWay}" />

        <!--  Старт проекта  -->
        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Text="Старт проекта:" />
        <DatePicker
            Grid.Row="6"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0,11,194,4"
            SelectedDate="{Binding CurrentProjectModel.StartDate, Mode=TwoWay}" />

        <!--  Выход из производства  -->
        <TextBlock
            Grid.Row="6"
            Grid.Column="2"
            Margin="14,0,4,0"
            Text="Выход из производства:" />
        <DatePicker
            Grid.Row="6"
            Grid.Column="3"
            Margin="0,9,0,6"
            SelectedDate="{Binding CurrentProjectModel.OutOfProduction, Mode=TwoWay}" />

        <!--  Дата окончания договора  -->
        <TextBlock
            Grid.Row="7"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Margin="1,0,401,0"
            Text="Дата окончания договора:" />
        <DatePicker
            Grid.Row="7"
            Grid.Column="3"
            Margin="0,10,0,5"
            SelectedDate="{Binding CurrentProjectModel.EndDate, Mode=TwoWay}" />

        <!--  Заказ покупателя  -->
        <TextBlock
            Grid.Row="8"
            Grid.Column="0"
            Text="Заказ покупателя:" />
        <TextBox
            Grid.Row="8"
            Grid.Column="1"
            Margin="2,9,8,6"
            Text="{Binding CurrentProjectModel.OrderCustomer}" />

        <!--  Заявка на производство  -->
        <TextBlock
            Grid.Row="9"
            Grid.Column="0"
            Text="Заявка на производство:" />
        <TextBox
            Grid.Row="9"
            Grid.Column="1"
            Margin="3,9,8,6"
            Text="{Binding CurrentProjectModel.RequestProduction}" />

        <!--  Трудозатраты  -->
        <TextBlock
            Grid.Row="10"
            Grid.Column="0"
            Text="Трудозатраты:" />
        <TextBox
            Grid.Row="10"
            Grid.Column="1"
            Margin="3,8,8,7"
            Text="{Binding CurrentProjectModel.HumanCost}" />

        <!--  Руководитель  -->
        <TextBlock
            Grid.Row="11"
            Grid.Column="0"
            Text="Руководитель:" />
        <TextBox
            Grid.Row="11"
            Grid.Column="1"
            Margin="3,9,8,6"
            Text="{Binding CurrentProjectModel.Manager}" />

        <!--  Маркировка+  -->
        <TextBlock
            Grid.Row="12"
            Grid.Column="0"
            Text="Маркировка+:" />
        <TextBox
            Grid.Row="12"
            Grid.Column="1"
            Margin="3,9,8,6"
            Text="{Binding CurrentProjectModel.MarkPlus}" />

        <!--  Маркировка-  -->
        <TextBlock
            Grid.Row="12"
            Grid.Column="2"
            Margin="77,11,7,0"
            VerticalAlignment="Top"
            Text="Маркировка-:" />
        <TextBox
            Grid.Row="12"
            Grid.Column="3"
            Margin="0,11,200,4"
            Text="{Binding CurrentProjectModel.MarkMinus}" />

        <!--  Оцинкование стендов  -->
        <CheckBox
            Grid.Row="13"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,8,121,0"
            VerticalAlignment="Top"
            Content="Оцинкование стендов"
            FontSize="14"
            IsChecked="{Binding CurrentProjectModel.IsGalvanized}" />

        <!--  Кнопки  -->
        <StackPanel
            Grid.Row="13"
            Grid.Column="3"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Margin="0,0,5,0"
                Command="{Binding ProjectCommandProvider.CreateNewCardCommand}"
                Content="Добавить новый" />
            <Button Command="{Binding ProjectCommandProvider.SaveChangesCommand}" Content="Сохранить изменения" />
        </StackPanel>
    </Grid>
</UserControl>