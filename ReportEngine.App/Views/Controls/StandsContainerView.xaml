<UserControl
    x:Class="ReportEngine.App.Views.Controls.StandsContainerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReportEngine.App.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{DynamicResource PrimaryColor}"
    FontSize="16"
    Foreground="{DynamicResource PrimaryForeground}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <GroupBox
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            Padding="5">
            <GroupBox.Header>
                <TextBlock>
                    <Run Text="Упаковка проекта" />
                    <Run
                        FontSize="14"
                        FontWeight="Bold"
                        Text="{Binding CurrentProjectModel.SelectedStand.KKSCode, TargetNullValue='(ошибка привязки)'}" />
                </TextBlock>
            </GroupBox.Header>
            <DataGrid
                CanUserAddRows="True"
                ItemsSource="{Binding CurrentProjectModel.SelectedStand.AllElectricalPurposesInStand}"
                SelectedItem="{Binding CurrentProjectModel.SelectedStand.SelectedElectricalComponent}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Purpose}" Header="Упаковок" />
                    <DataGridTextColumn Binding="{Binding Material}" Header="Стендов" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <GroupBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            Padding="5">
            <GroupBox.Header>
                <TextBlock>
                    <Run Text="Упаковка очередь — " />
                    <Run
                        FontSize="14"
                        FontWeight="Bold"
                        Text="{Binding CurrentProjectModel.SelectedStand.KKSCode, TargetNullValue='(ошибка привязки)'}" />
                </TextBlock>
            </GroupBox.Header>
            <DataGrid
                CanUserAddRows="True"
                ItemsSource="{Binding CurrentProjectModel.SelectedStand.AllElectricalPurposesInStand}"
                SelectedItem="{Binding CurrentProjectModel.SelectedStand.SelectedElectricalComponent}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Purpose}" Header="Упаковка" />
                    <DataGridTextColumn Binding="{Binding Material}" Header="Стендов" />
                    <DataGridTextColumn Binding="{Binding Quantity}" Header="Масса стендов" />
                    <DataGridTextColumn Binding="{Binding Measure}" Header="Масса" />
                    <DataGridTextColumn Binding="{Binding CostPerUnit}" Header="Ширина" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <GroupBox
            Grid.Row="0"
            Grid.Column="2"
            Margin="5"
            Padding="5">
            <GroupBox.Header>
                <TextBlock>
                    <Run Text="Стенды упаковки — ИМЯ " />
                    <Run
                        FontSize="14"
                        FontWeight="Bold"
                        Text="{Binding CurrentProjectModel.SelectedStand.KKSCode, TargetNullValue='(ошибка привязки)'}" />
                </TextBlock>
            </GroupBox.Header>
            <DataGrid
                CanUserAddRows="True"
                ItemsSource="{Binding CurrentProjectModel.SelectedStand.AllElectricalPurposesInStand}"
                SelectedItem="{Binding CurrentProjectModel.SelectedStand.SelectedElectricalComponent}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Purpose}" Header="KKS-код стенда" />
                    <DataGridTextColumn Binding="{Binding Material}" Header="Серийный номер" />
                    <DataGridTextColumn Binding="{Binding Quantity}" Header="Ширина" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</UserControl>
