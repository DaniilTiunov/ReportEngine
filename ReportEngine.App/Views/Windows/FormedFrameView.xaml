<Window
    x:Class="ReportEngine.App.Views.Windows.FormedFrameView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReportEngine.App.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Создание и редактирование рам"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!--  Левая часть: Список рам и параметры  -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Список рам  -->
            <GroupBox
                Grid.Row="0"
                Margin="10"
                Header="Список рам">
                <ListBox Height="150" Margin="5" />
            </GroupBox>

            <!--  Параметры рамы  -->
            <GroupBox
                Grid.Row="1"
                Margin="10"
                Header="Параметры рамы">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        Наименование:
                    </TextBlock>
                    <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="5" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        Ширина:
                    </TextBlock>
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        Высота:
                    </TextBlock>
                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="5" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        Глубина:
                    </TextBlock>
                    <TextBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="5" />

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        Масса:
                    </TextBlock>
                    <TextBox
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="5" />

                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        Обозначение по КД:
                    </TextBlock>
                    <TextBox
                        Grid.Row="5"
                        Grid.Column="1"
                        Margin="5" />
                </Grid>
            </GroupBox>

            <!--  Кнопки управления  -->
            <StackPanel
                Grid.Row="2"
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Margin="5"
                    Content="Добавить" />
                <Button
                    Width="150"
                    Margin="5"
                    Content="Сохранить изменения" />
            </StackPanel>
        </Grid>

        <!--  Правая часть: Комплектующие  -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Заголовок комплектующих  -->
            <GroupBox
                Grid.Row="0"
                Margin="10"
                Header="Комплектующие">
                <ListBox Height="150" Margin="5" />
            </GroupBox>

            <!--  Таблица комплектующих  -->
            <GroupBox
                Grid.Row="1"
                Margin="10"
                Header="Комплектующие для рамы">
                <DataGrid Margin="5" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Name}" Header="Наименование" />
                        <DataGridTextColumn Binding="{Binding Unit}" Header="Ед. изм." />
                        <DataGridTextColumn Binding="{Binding Quantity}" Header="Кол-во" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!--  Кнопки управления  -->
            <StackPanel
                Grid.Row="2"
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="180"
                    Margin="5"
                    Content="Добавить комплектующую" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
