<Window
    x:Class="ReportEngine.App.Views.Windows.FormedFrameView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReportEngine.App.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Создание и редактирование рам"
    Width="1400"
    Height="700"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!--  Левая часть: Список рам и параметры  -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Список рам  -->
            <GroupBox
                Grid.Row="0"
                Margin="10"
                Header="Список рам">
                <DataGrid
                    Height="300"
                    Margin="5"
                    ItemsSource="{Binding FormedFrameModel.AllFrames}"
                    SelectedItem="{Binding FormedFrameModel.SelectedFrame}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Name}" Header="Наименование" />
                        <DataGridTextColumn Binding="{Binding FrameType}" Header="Тип" />
                        <DataGridTextColumn Binding="{Binding Width}" Header="Ширина" />
                        <DataGridTextColumn Binding="{Binding Height}" Header="Высота" />
                        <DataGridTextColumn Binding="{Binding Depth}" Header="Глубина" />
                        <DataGridTextColumn Binding="{Binding Weight}" Header="Масса" />
                        <DataGridTextColumn Binding="{Binding Designe}" Header="Описание по КД" />
                        <DataGridTextColumn Binding="{Binding FrameDetails}" Header="Детали рамы" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!--  Параметры рамы  -->
            <GroupBox
                Grid.Row="1"
                Margin="15,6,5,10"
                Header="Параметры рамы">
                <Grid Height="182">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        Наименование:
                    </TextBlock>
                    <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="5"
                        Text="{Binding FormedFrameModel.SelectedFrame.Name}" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        Ширина:
                    </TextBlock>
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        Text="{Binding FormedFrameModel.SelectedFrame.Width}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        Высота:
                    </TextBlock>
                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="5"
                        Text="{Binding FormedFrameModel.SelectedFrame.Height}" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        Глубина:
                    </TextBlock>
                    <TextBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="5"
                        Text="{Binding FormedFrameModel.SelectedFrame.Depth}" />

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        Масса:
                    </TextBlock>
                    <TextBox
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="5"
                        Text="{Binding FormedFrameModel.SelectedFrame.Weight}" />

                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        Обозначение по КД:
                    </TextBlock>
                    <TextBox
                        Grid.Row="5"
                        Grid.Column="1"
                        Margin="5"
                        Text="{Binding FormedFrameModel.SelectedFrame.Designe}" />
                </Grid>
            </GroupBox>

            <!--  Кнопки управления  -->
            <StackPanel
                Grid.Row="2"
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Margin="5"
                    Command="{Binding AddNewFrameCommand}"
                    Content="Добавить" />
                <Button
                    Width="150"
                    Margin="5"
                    Content="Сохранить изменения" />
            </StackPanel>
        </Grid>

        <!--  Правая часть: Комплектующие  -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Вкладки для различных категорий комплектующих  -->
            <TabControl Grid.Row="0" Margin="10">
                <TabItem Header="Детали рамы">
                    <DataGrid
                        Margin="5"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        ItemsSource="{Binding FormedFrameModel.FrameDetails}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Name}" Header="Наименование" />
                            <DataGridTextColumn Binding="{Binding Cost}" Header="Цена" />
                            <DataGridTextColumn Binding="{Binding Measure}" Header="Единица измерения" />
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Комплектующие для стойки">
                    <DataGrid
                        Margin="5"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        ItemsSource="{Binding FormedFrameModel.FrameRolls}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Name}" Header="Наименование" />
                            <DataGridTextColumn Binding="{Binding Cost}" Header="Цена" />
                            <DataGridTextColumn Binding="{Binding Measure}" Header="Единица измерения" />
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Прокат">
                    <DataGrid
                        Margin="5"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        ItemsSource="{Binding FormedFrameModel.PillarEqiups}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Name}" Header="Наименование" />
                            <DataGridTextColumn Binding="{Binding Cost}" Header="Цена" />
                            <DataGridTextColumn Binding="{Binding Measure}" Header="Единица измерения" />
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
            </TabControl>
            <!--  Кнопки управления  -->
            <StackPanel
                Grid.Row="2"
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="180"
                    Margin="5"
                    Content="Добавить комплектующую" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
