<Window
    x:Class="ReportEngine.App.Views.Windows.FormedFrameView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Создание и редактирование рам"
    FontSize="13"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!--  Левая часть: Список рам и параметры  -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Список рам  -->
            <GroupBox
                Grid.Row="0"
                Margin="10"
                Header="Список рам">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <DataGrid
                        Grid.Column="0"
                        Margin="5"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        ItemsSource="{Binding FormedFrameModel.AllFrames}"
                        SelectedItem="{Binding FormedFrameModel.SelectedFrame}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Name}" Header="Наименование" />
                            <DataGridTextColumn Binding="{Binding FrameType}" Header="Тип" />
                            <DataGridTextColumn Binding="{Binding Width}" Header="Ширина" />
                            <DataGridTextColumn Binding="{Binding Height}" Header="Высота" />
                            <DataGridTextColumn Binding="{Binding Depth}" Header="Глубина" />
                            <DataGridTextColumn Binding="{Binding Weight}" Header="Масса" />
                            <DataGridTextColumn Binding="{Binding Designe}" Header="Описание по КД" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <GroupBox
                        Grid.Column="1"
                        Margin="5"
                        Header="Комплектующие рамы">
                        <DataGrid
                            Margin="5"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            IsReadOnly="False"
                            ItemsSource="{Binding FormedFrameModel.DisplayedComponents}"
                            SelectedItem="{Binding FormedFrameModel.SelectedComponentInFrame}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Component.Name}" Header="Наименование" />
                                <DataGridTextColumn Binding="{Binding Count}" Header="Кол-во" />
                                <DataGridTextColumn
                                    Binding="{Binding Length, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Header="Длина (м)" />
                                <DataGridTemplateColumn Header="Действия">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Command="{Binding DataContext.RemoveComponentCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                CommandParameter="{Binding}"
                                                Content="Удалить" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Binding="{Binding CostComponent, StringFormat={}{0:N2}}"
                                                    Header="Цена за ед." />
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </GroupBox>

            <!--  Добавление новой рамы  -->
            <GroupBox
                Grid.Row="1"
                Margin="10"
                Header="Добавление новой рамы">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        <Run Text="Наименование:" />
                    </TextBlock>
                    <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="5"
                        Text="{Binding FormedFrameModel.NewFrame.Name}" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        <Run Text="Тип:" />
                    </TextBlock>
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        Text="{Binding FormedFrameModel.NewFrame.FrameType}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        <Run Text="Ширина:" />
                    </TextBlock>
                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="5"
                        Text="{Binding FormedFrameModel.NewFrame.Width}" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        <Run Text="Высота:" />
                    </TextBlock>
                    <TextBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="5"
                        Text="{Binding FormedFrameModel.NewFrame.Height}" />

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        <Run Text="Глубина:" />
                    </TextBlock>
                    <TextBox
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="5"
                        Text="{Binding FormedFrameModel.NewFrame.Depth}" />

                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        <Run Text="Масса:" />
                    </TextBlock>
                    <TextBox
                        Grid.Row="5"
                        Grid.Column="1"
                        Margin="5"
                        Text="{Binding FormedFrameModel.NewFrame.Weight}" />

                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        <Run Text="Обозначение по КД:" />
                    </TextBlock>
                    <TextBox
                        Grid.Row="6"
                        Grid.Column="1"
                        Margin="5"
                        Text="{Binding FormedFrameModel.NewFrame.Designe}" />
                </Grid>
            </GroupBox>

            <!--  Редактирование рамы из списка  -->
            <GroupBox
                Grid.Row="2"
                Margin="10"
                Header="Редактирование рамы из списка">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        <Run Text="Наименование:" />
                    </TextBlock>
                    <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="5"
                        Text="{Binding FormedFrameModel.SelectedFrame.Name}" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        <Run Text="Тип:" />
                    </TextBlock>
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        Text="{Binding FormedFrameModel.SelectedFrame.FrameType}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        <Run Text="Ширина:" />
                    </TextBlock>
                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="5"
                        Text="{Binding FormedFrameModel.SelectedFrame.Width}" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        <Run Text="Высота:" />
                    </TextBlock>
                    <TextBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="5"
                        Text="{Binding FormedFrameModel.SelectedFrame.Height}" />

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        <Run Text="Глубина:" />
                    </TextBlock>
                    <TextBox
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="5"
                        Text="{Binding FormedFrameModel.SelectedFrame.Depth}" />

                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        <Run Text="Масса:" />
                    </TextBlock>
                    <TextBox
                        Grid.Row="5"
                        Grid.Column="1"
                        Margin="5"
                        Text="{Binding FormedFrameModel.SelectedFrame.Weight}" />

                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Center">
                        <Run Text="Обозначение по КД:" />
                    </TextBlock>
                    <TextBox
                        Grid.Row="6"
                        Grid.Column="1"
                        Margin="5"
                        Text="{Binding FormedFrameModel.SelectedFrame.Designe}" />
                </Grid>
            </GroupBox>

            <!--  Кнопки управления  -->
            <StackPanel
                Grid.Row="3"
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Margin="5"
                    Command="{Binding AddNewFrameCommand}"
                    Content="Добавить новую" />
                <Button
                    Margin="5"
                    Command="{Binding SaveChangesCommand}"
                    Content="Сохранить изменения" />
                <Button
                    Margin="5"
                    Command="{Binding DeleteFrameCommand}"
                    Content="Удалить выбранную раму" />
            </StackPanel>
        </Grid>

        <!--  Правая часть: Комплектующие  -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Вкладки для различных категорий комплектующих  -->
            <TabControl Grid.Row="0" Margin="10">
                <TabItem Header="Детали рамы">
                    <StackPanel>
                        <DataGrid
                            Margin="5"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            ItemsSource="{Binding FormedFrameModel.FrameDetails}"
                            SelectedItem="{Binding FormedFrameModel.SelectedComponentForAdd}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Name}" Header="Наименование" />
                                <DataGridTextColumn Binding="{Binding Cost}" Header="Цена" />
                                <DataGridTextColumn Binding="{Binding Measure}" Header="Единица измерения" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Margin="5,0,0,5" Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Text="Длина (м):" />
                            <TextBox Width="60"
                                     Text="{Binding FormedFrameModel.ComponentLength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <Button
                            Margin="5"
                            Command="{Binding AddDetailsCommand}"
                            CommandParameter="FrameDetail"
                            Content="Добавить комплектующую" />
                    </StackPanel>
                </TabItem>
                <TabItem Header="Комплектующие для стойки">
                    <StackPanel>
                        <DataGrid
                            Margin="5"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            ItemsSource="{Binding FormedFrameModel.PillarEqiups}"
                            SelectedItem="{Binding FormedFrameModel.SelectedComponentForAdd}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Name}" Header="Наименование" />
                                <DataGridTextColumn Binding="{Binding Cost}" Header="Цена" />
                                <DataGridTextColumn Binding="{Binding Measure}" Header="Единица измерения" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Margin="5,0,0,5" Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Text="Длина (м):" />
                            <TextBox Width="60"
                                     Text="{Binding FormedFrameModel.ComponentLength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <Button
                            Margin="5"
                            Command="{Binding AddDetailsCommand}"
                            CommandParameter="PillarEqiup"
                            Content="Добавить комплектующую" />
                    </StackPanel>
                </TabItem>
                <TabItem Header="Прокат">
                    <StackPanel>
                        <DataGrid
                            Margin="5"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            ItemsSource="{Binding FormedFrameModel.FrameRolls}"
                            SelectedItem="{Binding FormedFrameModel.SelectedComponentForAdd}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Name}" Header="Наименование" />
                                <DataGridTextColumn Binding="{Binding Cost}" Header="Цена" />
                                <DataGridTextColumn Binding="{Binding Measure}" Header="Единица измерения" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Margin="5,0,0,5" Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Text="Длина (м):" />
                            <TextBox Width="60"
                                     Text="{Binding FormedFrameModel.ComponentLength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <Button
                            Margin="5"
                            Command="{Binding AddDetailsCommand}"
                            CommandParameter="FrameRoll"
                            Content="Добавить комплектующую" />
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>