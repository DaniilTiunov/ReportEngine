<Window
    x:Class="ReportEngine.App.Views.Windows.ObvyazkiView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:ReportEngine.App.Display"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReportEngine.App.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Обвязки"
    Width="1400"
    Height="700"
    mc:Ignorable="d">
    <Window.Resources>
        <converters:ObvyazkaImagePathConverter x:Key="ObvyazkaImagePathConverter" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Заголовок  -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="10"
            HorizontalAlignment="Center"
            FontSize="16"
            FontWeight="Bold"
            Text="Список обвязок" />

        <!--  Основная таблица  -->
        <DataGrid
            x:Name="ObyazkiDataGrid"
            Grid.Row="1"
            Grid.Column="0"
            Margin="10"
            AutoGenerateColumns="False"
            CanUserAddRows="True"
            CanUserDeleteRows="True"
            CanUserReorderColumns="False"
            CanUserSortColumns="True"
            FontSize="14"
            HorizontalScrollBarVisibility="Auto"
            ItemsSource="{Binding CurrentObvyazka.Obvyazki, Mode=TwoWay}"
            RowHeaderWidth="0"
            RowHeight="100"
            SelectedItem="{Binding CurrentObvyazka.SelectedObvyazka, Mode=TwoWay}"
            SelectionUnit="FullRow"
            VerticalScrollBarVisibility="Auto">

            <DataGrid.Columns>
                <!--  Столбец с изображением  -->
                <DataGridTemplateColumn
                    Width="200"
                    Header="Изображение"
                    IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border
                                Margin="1"
                                Background="WhiteSmoke"
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="5">
                                <Image
                                    Width="80"
                                    Height="240"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Source="{Binding ImageName, Converter={StaticResource ObvyazkaImagePathConverter}}"
                                    Stretch="Uniform" />
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!--  Остальные столбцы  -->
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Number}"
                    Header="Номер" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding LineLength}"
                    Header="Длина линии" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding ZraCount}"
                    Header="Кол-во ЗРА" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding TreeSocket}"
                    Header="Тройники" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Sensor}"
                    Header="Датчики" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding SensorType}"
                    Header="Тип датчиков" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Clamp}"
                    Header="Хомуты" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding WidthOnFrame}"
                    Header="Длина на раме" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding OtherLineCount}"
                    Header="Др. линии" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Weight}"
                    Header="Масса" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding HumanCost}"
                    Header="Трудозатраты" />
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding ShowAllObvyazkaCommand}" Header="Показать всех" />
                    <Separator />
                    <MenuItem Command="{Binding SaveUserCommand}" Header="Сохранить изменения" />
                    <MenuItem Command="{Binding AddNewUserCommand}" Header="Добавить" />
                    <Separator />
                    <MenuItem Command="{Binding DeleteUserCommand}" Header="Удалить" />
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</Window>