<Window
    x:Class="ReportEngine.App.Views.Windows.ObvyazkiView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReportEngine.App.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Обвязки"
    Width="1125"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89*" />
            <ColumnDefinition Width="63*" />
            <ColumnDefinition Width="43*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid
            x:Name="ObyazkiDataGrid"
            Grid.Row="1"
            Grid.ColumnSpan="4"
            Margin="11,34,4,55"
            AutoGenerateColumns="False"
            CanUserAddRows="True"
            CanUserDeleteRows="True"
            CanUserReorderColumns="True"
            CanUserSortColumns="True"
            FontSize="14"
            ItemsSource="{Binding CurrentObvyazka.Obvyazki, Mode=TwoWay}"
            RowHeaderWidth="40"
            SelectedItem="{Binding CurrentObvyazka.SelectedObvyazka, Mode=TwoWay}"
            SelectionUnit="FullRow">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding ShowAllObvyazkaCommand}" Header="Показать всех" />
                    <Separator />
                    <MenuItem Command="{Binding SaveUserCommand}" Header="Сохранить изменения" />
                    <MenuItem Command="{Binding AddNewUserCommand}" Header="Добавить" />
                    <Separator />
                    <MenuItem Command="{Binding DeleteUserCommand}" Header="Удалить" />
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Number, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    Header="Номер" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding LineLength, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    Header="Длина линии" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ZraCount, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    Header="Количество ЗРА" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TreeSocket, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    Header="Тройники" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Sensor, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    Header="Датчики" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding SensorType, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    Header="Тип датчиков" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Clamp, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    Header="Хомуты" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding WidthOnFrame, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    Header="Длина на раме" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding OtherLineCount, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    Header="Колво др. линий" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Weight, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    Header="Масса" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding HumanCost, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    Header="Трудозатраты чел/час" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
