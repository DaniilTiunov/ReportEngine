<Window
    x:Class="ReportEngine.App.Views.Windows.CompanyView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Заказчики"
    Width="1000"
    Height="600"
    Background="{DynamicResource PrimaryColor}"
    Foreground="{DynamicResource PrimaryForeground}"
    FontFamily="Bahnschrift"
    FontSize="14"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="90" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DataGrid
            x:Name="CompaniesDataGrid"
            Grid.Row="1"
            Grid.ColumnSpan="4"
            Margin="10,14,5,75"
            CanUserAddRows="True"
            CanUserDeleteRows="True"
            CanUserReorderColumns="True"
            CanUserSortColumns="True"
            ItemsSource="{Binding CurrentCompany.AllCompanies, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            RowHeaderWidth="40"
            SelectedItem="{Binding CurrentCompany.SelectedCompany, Mode=TwoWay}"
            SelectionUnit="FullRow">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding LoadAllCompaniesCommand}" Header="Показать всех" />
                    <Separator />
                    <MenuItem Command="{Binding SaveChangesCommand}" Header="Сохранить изменения" />
                    <MenuItem Command="{Binding AddNewCompanyCommand}" Header="Добавить" />
                    <Separator />
                    <MenuItem Command="{Binding DeleteCompanyCommand}" Header="Удалить" />
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="90"
                    Binding="{Binding Number, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    Header="Номер" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    Header="Название организации" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding RegisterDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    Header="Дата регистрации" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>