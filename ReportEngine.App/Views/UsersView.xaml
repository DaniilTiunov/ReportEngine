<Window
    x:Class="ReportEngine.App.Views.UsersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReportEngine.App.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ReportEngine.App.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="27*" />
        </Grid.ColumnDefinitions>
        <DataGrid
            x:Name="UsersDataGrid"
            Grid.ColumnSpan="3"
            Margin="10,10,10,70"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            ItemsSource="{Binding AllUsers}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding SecondName}"
                    Header="Фамилия" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="Имя" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding LastName}"
                    Header="Отчество" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Position}"
                    Header="Должность" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Cabinet}"
                    Header="Кабинет" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Email}"
                    Header="Почта" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PhoneContact}"
                    Header="Номер для связи" />
                <DataGridTemplateColumn Width="Auto" />
            </DataGrid.Columns>
        </DataGrid>
        <Button
            Margin="105,380,70,20"
            Command="{Binding ShowAllUsersCommand}"
            Content="Показать всех" />
    </Grid>
</Window>