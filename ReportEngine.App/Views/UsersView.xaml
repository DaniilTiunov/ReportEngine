<Window
    x:Class="ReportEngine.App.Views.UsersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReportEngine.App.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ReportEngine.App.ViewModels"
    Title="Управление пользователями"
    Width="1000"
    Height="700"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Height" Value="40" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Background" Value="#FFDDDDDD" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Margin" Value="10" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="RowBackground" Value="#FFF5F5F5" />
            <Setter Property="AlternatingRowBackground" Value="#FFE0E0E0" />
            <Setter Property="FontSize" Value="14" />
        </Style>
    </Window.Resources>

    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Command="{Binding ShowAllUsersCommand}" Header="Показать всех" />
            <MenuItem Command="{Binding HideUsersCommand}" Header="Закрыть окно" />
            <MenuItem Command="{Binding DeleteUserCommand}" Header="Удалить выбранного пользователя" />
            <MenuItem Command="{Binding AddNewUserCommand}" Header="Добавить" />
        </ContextMenu>
    </Window.ContextMenu>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid
            x:Name="UsersDataGrid"
            Grid.Row="1"
            Margin="10,79,10,10"
            CanUserAddRows="True"
            ItemsSource="{Binding AllUsers}"
            RowHeaderWidth="40"
            SelectedItem="{Binding SelectedUser}"
            SelectionUnit="FullRow">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding ShowAllUsersCommand}" Header="Показать всех" />
                    <MenuItem Command="{Binding DeleteUserCommand}" Header="Удалить выбранного пользователя" />
                    <MenuItem Command="{Binding AddNewUserCommand}" Header="Добавить" />
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding SecondName}"
                    Header="Фамилия" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="Имя" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding LastName}"
                    Header="Отчество" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Position}"
                    Header="Должность" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Cabinet}"
                    Header="Кабинет" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Email}"
                    Header="Почта" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PhoneContact}"
                    Header="Номер для связи" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
