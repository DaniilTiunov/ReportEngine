<Window
    x:Class="ReportEngine.App.Views.UsersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReportEngine.App.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ReportEngine.App.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="66*" />
            <ColumnDefinition Width="40*" />
            <ColumnDefinition Width="53*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <DataGrid
            x:Name="UsersDataGrid"
            Grid.ColumnSpan="3"
            Margin="10,10,5,70"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            ItemsSource="{Binding AllUsers}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding SecondName}"
                    Header="Фамилия" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="Имя" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding LastName}"
                    Header="Отчество" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Position}"
                    Header="Должность" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Cabinet}"
                    Header="Кабинет" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Email}"
                    Header="Почта" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PhoneContact}"
                    Header="Номер для связи" />
                <DataGridTemplateColumn Width="Auto" />
            </DataGrid.Columns>
        </DataGrid>
        <Button
            Width="155"
            Height="50"
            Margin="10,390,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding ShowAllUsersCommand}"
            Content="Показать всех" />
        <Button
            Grid.Column="2"
            Width="180"
            Height="50"
            Margin="75,0,0,10"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Command="{Binding HideUsersCommand}"
            Content="Закрыть окно" />
    </Grid>
</Window>