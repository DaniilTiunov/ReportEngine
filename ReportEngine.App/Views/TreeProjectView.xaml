<UserControl
    x:Class="ReportEngine.App.Views.TreeProjectView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReportEngine.App.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TreeView
            x:Name="MainTree"
            Grid.Column="0"
            MouseDoubleClick="OpenInTabControl">
            <TreeViewItem Header="Проект" IsExpanded="True">
                <TreeViewItem x:Name="Type" Header="Типы обвязок" />
                <TreeViewItem Header="Датчики" />
                <TreeViewItem Header="Заказчик" />
                <TreeViewItem Header="Оборудование" />
                <TreeViewItem Header="Документация" />
                <TreeViewItem Header="Настройки" />
                <TreeViewItem Header="Отчеты" />
            </TreeViewItem>
        </TreeView>

        <TabControl x:Name="MainTab" Grid.Column="1">
            <TabItem Header="Типы обвязок">
                <DataGrid AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Название" />
                        <DataGridTextColumn Header="Описание" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Датчики">
                <DataGrid AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Тип" />
                        <DataGridTextColumn Header="Модель" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
