<Window
    x:Class="ReportEngine.App.Views.AboutProgram"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReportEngine.App.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ReportEngine.App.ViewModels"
    Title="О программе"
    Width="400"
    Height="300"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <TextBlock
            Width="360"
            Margin="0,240,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Text="{Binding Version, StringFormat=Версия приложения build: \{0\}}" />
    </Grid>
</Window>