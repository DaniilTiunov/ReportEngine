<Window
    x:Class="ReportEngine.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReportEngine.App"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1920"
    Height="1080"
    mc:Ignorable="d">


    <DockPanel>

        <Menu DockPanel.Dock="Top"
              Height="25"
              FontSize="14">



            <MenuItem Header="Файл">

                <MenuItem Header="Открыть..." />
                <MenuItem Header="Сохранить" />
                <MenuItem Header="Сохранить как..." />
                <Separator/>
                <MenuItem Header="Настройки" />
                <Separator/>
                <MenuItem Header="Выход" />

            </MenuItem>



            <MenuItem Header="Вид">

                <MenuItem Header="Масштаб..." />
                <MenuItem Header="Темная тема" />
                <!--не верится что я это пишу-->

            </MenuItem>



            <MenuItem Header="Данные">

                <MenuItem Header="Таблица контрагентов" />
                <MenuItem Header="Таблица оборудования" />
                <Separator/>
                <MenuItem Header="Таблица слоняр" />
                <MenuItem Header="Таблица чуханов" />

            </MenuItem>



            <MenuItem Header="Инструменты">

                <MenuItem Header="Калькулятор" />
                <MenuItem Header="Вылетатель на рабочий стол" />
                <MenuItem Header="Флюгегехаймен" />

            </MenuItem>



            <MenuItem Header="Справка">

                <MenuItem Header="О программе" />
                <MenuItem Header="Открыть справку" />
                <MenuItem Header="Проверить обновления" />

            </MenuItem>
        </Menu>




        <StatusBar DockPanel.Dock="Bottom" 
                   Height="30">

            <!--костыль с шириной-->
            <!--Grid должна растягиваться на весь StatusBar, но этого не происходит почему-то-->
            <!--поэтому привязываемся в ширине родителя-->

            <Grid Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=StatusBar}}">


                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>

                </Grid.ColumnDefinitions>


                <TextBlock Grid.Column="0" 
                           Text="Слава богу ZOV" />


                <TextBlock Grid.Column="2" 
                           Text="Статус подключения к серверу:"/>

                <TextBlock Grid.Column="3"
                           Text="Сервер уничтожен Лёхой" />


            </Grid>
        </StatusBar>

        <Grid VerticalAlignment="Center"
              HorizontalAlignment="Center">

            <Button Height="38"
                    Margin="47,356,1351,0"
                    VerticalAlignment="Top"
                    Command="{Binding AddUserCommand}"
                    Content="Добавить" />
            
            
            <TextBox
                Width="213"
                Height="41"
                Margin="47,234,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="{Binding UserSecondName, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap" />
            <TextBox
                Width="213"
                Height="41"
                Margin="293,234,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap" />
            <Label
                Width="213"
                Height="31"
                Margin="127,173,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Фамилия" />
            <Label
                Width="213"
                Height="31"
                Margin="400,173,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Имя " />
            <Label
                Width="96"
                Height="30"
                Margin="570,360,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="HELLO ETALON" />
            <TextBlock
                Width="140"
                Height="31"
                Margin="815,878,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="{Binding Version, StringFormat=Версия build: \{0\}}" />


        </Grid>



    </DockPanel>

</Window>
