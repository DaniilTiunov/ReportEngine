<Window
    x:Class="ReportEngine.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReportEngine.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Grid Margin="0,0,10,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="384*" />
            <ColumnDefinition Width="11*" />
        </Grid.ColumnDefinitions>
        <Button
            Height="38"
            Margin="127,321,438,0"
            VerticalAlignment="Top"
            Command="{Binding AddUserCommand}"
            Content="Добавить" />
        <Button
            Width="213"
            Height="38"
            Margin="480,34,75,368"
            Command="{Binding CheckForUpdatesCommand}"
            Content="Проверить обновления" />
        <TextBox
            Width="213"
            Height="41"
            Margin="127,234,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding UserId, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />
        <TextBox
            Width="213"
            Height="41"
            Margin="400,234,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />
        <Label
            Width="213"
            Height="31"
            Margin="127,173,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Id" />
        <Label
            Width="213"
            Height="31"
            Margin="400,173,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Имя " />
        <Label
            Width="95"
            Height="31"
            Margin="314,56,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="HELLO ETALON" />
        <TextBlock
            Width="140"
            Height="31"
            Margin="623,359,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding Version, StringFormat='Версия build: {0}'}" />
    </Grid>
</Window>
