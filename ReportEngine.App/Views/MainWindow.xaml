<Window
    x:Class="ReportEngine.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReportEngine.App"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1920"
    Height="1080"
    mc:Ignorable="d">

    <Grid Margin="0,0,0,0">
        <Button
            Height="38"
            Margin="47,356,1351,0"
            VerticalAlignment="Top"
            Command="{Binding AddUserCommand}"
            Content="Добавить" />
        <TextBox
            Width="213"
            Height="41"
            Margin="47,234,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding UserSecondName, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />
        <TextBox
            Width="213"
            Height="41"
            Margin="293,234,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />
        <Label
            Width="213"
            Height="31"
            Margin="127,173,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Фамилия" />
        <Label
            Width="213"
            Height="31"
            Margin="400,173,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Имя " />
        <Label
            Width="96"
            Height="30"
            Margin="570,360,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="HELLO ETALON" />
        <TextBlock
            Width="140"
            Height="31"
            Margin="815,878,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding Version, StringFormat=Версия build: \{0\}}" />

        <Menu
            Height="30"
            VerticalAlignment="Top"
            FontSize="17">
            <MenuItem Header="Справка">
                <MenuItem Header="О программе" />
                <MenuItem Command="{Binding CheckForUpdatesCommand}" Header="Проверить обновление" />
            </MenuItem>
        </Menu>
    </Grid>
</Window>
