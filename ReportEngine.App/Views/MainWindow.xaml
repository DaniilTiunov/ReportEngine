<Window
    x:Class="ReportEngine.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReportEngine.App"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Кварта СКИП"
    Width="1920"
    Height="1080"
    Icon="/Resources/Icons/estimate_cost_icon_213382.ico"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Dictionaries/GigaChadUI.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Image x:Key="refresh-button.png" Source="/Resources/Images/refresh-button.png" />
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel>
        <Menu
            Height="25"
            DockPanel.Dock="Top"
            FontSize="14">
            <MenuItem Header="Файл">
                <MenuItem Command="{Binding OpenTreeViewCommand}" Header="Новый проект" />
                <MenuItem Command="{Binding OpenMainWindowCommand}" Header="На главный экран" />
                <Separator />
                <MenuItem Click="OpenSettingsWindow" Header="Настройки" />
                <Separator />
                <MenuItem Command="{Binding CloseAppCommand}" Header="Выход" />
            </MenuItem>
            <MenuItem Header="Вид">
                <MenuItem Header="Масштаб..." />
            </MenuItem>
            <MenuItem Header="Исходные данные">
                <MenuItem Header="Сортамент труб">
                    <MenuItem Command="{Binding OpenHeaterPipeCommand}" Header="Жарпрочная сталь" />
                    <MenuItem Command="{Binding OpenStainlessPipeCommand}" Header="Нержавеющая сталь" />
                    <MenuItem Command="{Binding OpenCarbonPipeCommand}" Header="Углеродистая сталь" />
                </MenuItem>
                <MenuItem Header="Запорные арматуры">
                    <MenuItem Header="Жарпрочная сталь" />
                    <MenuItem Header="Нержавеющая сталь" />
                    <MenuItem Header="Углеродистая сталь" />
                </MenuItem>
                <MenuItem Header="Тройники и КМЧ">
                    <MenuItem Header="Жарпрочная сталь" />
                    <MenuItem Header="Нержавеющая сталь" />
                    <MenuItem Header="Углеродистая сталь" />
                </MenuItem>
                <Separator />
                <MenuItem Header="Дренаж" />
                <Separator />
                <MenuItem Header="Рамные комплектующие">
                    <MenuItem Header="Детали рамы" />
                    <MenuItem Header="Комплектующие для стойки" />
                    <MenuItem Header="Прокат" />
                </MenuItem>
                <Separator />
                <MenuItem Header="Кронштейны">
                    <MenuItem Header="Крепление датчиков" />
                    <MenuItem Header="Крепление дренажа" />
                    <MenuItem Header="Крепление клеммных коробок" />
                </MenuItem>
                <Separator />
                <MenuItem Header="Электрические компоненты">
                    <MenuItem Header="Кабельная продукция" />
                    <MenuItem Header="Кабельные вводы" />
                    <MenuItem Header="Клеммные коробки" />
                    <MenuItem Header="Обогрев" />
                    <MenuItem Header="Средства прокладки и защиты кабеля" />
                </MenuItem>
                <Separator />
                <MenuItem Header="Прочие" />
                <Separator />
                <MenuItem Header="Тара" />
                <Separator />
                <MenuItem Command="{Binding OpenAllUsersCommand}" Header="Пользователи" />
            </MenuItem>
            <MenuItem Header="Инструменты">
                <MenuItem Click="ShowCalculator" Header="Калькулятор" />
                <MenuItem Click="ShowNotepad" Header="Блокнот" />
                <Separator />
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Click="ShowAboutProgram" Header="О программе" />
                <MenuItem Header="Открыть справку" />
                <MenuItem Click="CheckForUpdates" Header="Проверить обновления" />
            </MenuItem>
        </Menu>

        <StatusBar Height="30" DockPanel.Dock="Bottom">
            <Grid Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=StatusBar}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    FontSize="14"
                    Text="Текущий пользователь:" />
                <TextBlock
                    Grid.Column="1"
                    Margin="1335,0,184,0"
                    FontSize="14"
                    Text="Статус подключения к серверу:" />
                <TextBlock
                    Grid.Column="1"
                    Margin="1555,0,9,0"
                    FontSize="14"
                    Text="{Binding ConnectionStatusMessage}" />
                <Button
                    Grid.Column="1"
                    Margin="1287,-1,453,-2"
                    BorderThickness="0,0,0,0"
                    Command="{Binding ChekDbConnectionCommand}"
                    Content="{StaticResource refresh-button.png}" />
            </Grid>
        </StatusBar>

        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="95*" />
            </Grid.ColumnDefinitions>
            <ContentControl x:Name="MainContentControl" Grid.ColumnSpan="2">
                <DataGrid
                    x:Name="MainDataGrid"
                    Margin="5,43,10,0"
                    ItemsSource="{Binding AllProjects}"
                    SelectedItem="{Binding SelectedProject}"
                    SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Number}"
                            Header="№п/п" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Company}"
                            Header="Заказчик" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Object}"
                            Header="Объект" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding StandCount}"
                            Header="Кол-во стендов" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Status}"
                            Header="Статус" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding StartDate}"
                            Header="Старт проекта" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding OutOfProduction}"
                            Header="Выход из производства" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding EndDate}"
                            Header="Дата окончания договора" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding OrderCustomer}"
                            Header="Заказ покупателя" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding RequestProduction}"
                            Header="Заявка на производство" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Property10}"
                            Header="Ещё что-то" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Property11}"
                            Header="Ещё что-то" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Property12}"
                            Header="Ещё что-то" />
                    </DataGrid.Columns>
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Редактировать проект" />
                            <MenuItem Command="{Binding ShowAllProjectsCommand}" Header="Обновить" />
                            <MenuItem Command="{Binding DeleteSelectedProjectCommand}" Header="Удалить проект" />
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
            </ContentControl>
        </Grid>
    </DockPanel>
</Window>
