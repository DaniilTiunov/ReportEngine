<Window
    x:Class="ReportEngine.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReportEngine.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Button
            Width="213"
            Height="38"
            Margin="127,321,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding AddUserCommand}"
            Content="Добавить" />
        <Button
            Width="213"
            Height="38"
            Margin="400,316,187,80"
            Command="{Binding CheckForUpdatesCommand}"
            Content="Проверить обновления" />
        <TextBox
            Width="213"
            Height="41"
            Margin="127,234,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding UserId, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />
        <TextBox
            Width="213"
            Height="41"
            Margin="400,234,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />
        <Label
            Width="213"
            Height="31"
            Margin="127,173,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Id" />
        <Label
            Width="213"
            Height="31"
            Margin="400,173,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Имя " />
        <Label
            Width="95"
            Height="31"
            Margin="314,56,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="HELLO ETALON" />
        <Label
            Width="147"
            Height="32"
            Margin="616,376,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Версия build 0.0.0.10" />
    </Grid>
</Window>
