<Window
    x:Class="ReportEngine.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReportEngine.App"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Кварта СКИП"
    Width="1920"
    Height="1080"
    Icon="/Resources/Icons/estimate_cost_icon_213382.ico"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <!--
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dictionaries/GigaChadUI.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    -->
    <DockPanel>
        <Menu
            Height="25"
            DockPanel.Dock="Top"
            FontSize="14">
            <MenuItem Header="Файл">
                <MenuItem Header="Открыть..." />
                <MenuItem Header="Сохранить" />
                <MenuItem Header="Сохранить как..." />
                <Separator />
                <MenuItem Header="Настройки" />
                <Separator />
                <MenuItem Command="{Binding CloseAppCommand}" Header="Выход" />
            </MenuItem>
            <MenuItem Header="Вид">
                <MenuItem Header="Масштаб..." />
                <MenuItem Header="Темная тема" />
                <MenuItem Header="Светлая тема" />
            </MenuItem>
            <MenuItem Header="Данные">
                <MenuItem Header="Таблица проектов" />
                <MenuItem Header="Таблица контрагентов" />
                <MenuItem Header="Таблица оборудования" />
                <Separator />
                <MenuItem Header="Таблица сотрудников" />
            </MenuItem>
            <MenuItem Header="Инструменты">
                <MenuItem Click="ShowCalculator" Header="Калькулятор" />
                <MenuItem Click="ShowNotepad" Header="Блокнот" />
                <Separator />
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Click="ShowAboutProgram" Header="О программе" />
                <MenuItem Header="Открыть справку" />
                <MenuItem Click="CheckForUpdates" Header="Проверить обновления" />
            </MenuItem>
        </Menu>

        <StatusBar Height="30" DockPanel.Dock="Bottom">
            <Grid Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=StatusBar}}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    FontSize="14"
                    Text="Текущий пользователь:" />

                <TextBlock
                    Grid.Column="1"
                    Margin="1335,0,184,0"
                    FontSize="14"
                    Text="Статус подключения к серверу:" />

                <TextBlock
                    Grid.Column="1"
                    Margin="1555,0,9,0"
                    FontSize="14"
                    Text="{Binding ConnectionStatusMessage}" />
            </Grid>

        </StatusBar>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" />

    </DockPanel>
</Window>
